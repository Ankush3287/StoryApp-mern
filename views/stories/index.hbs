<h1>Stories</h1>
<div class="row">
  {{#each stories}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          {{!-- ../user=> go out one level(out of each loop) and then take user --}}
          {{{editIcon user ../user _id}}}
        </div>
        <div class="card-content center-align">
          {{! story.title }}
          <h5>{{title}}</h5>
          <p>{{stripTags (truncate body 150)}}</p>
          <br />
          <div class="chip">
            <img src="{{user.image}}" alt="" />
            <a href="/stories/user/{{user.__id}}">{{user.displayName}}</a>
          </div>
        </div>
        <div class="card-action center-align">
          <a href="/stories/{{__id}}" class="btn grey">Read More</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No stories to display</p>
  {{/each}}
</div>